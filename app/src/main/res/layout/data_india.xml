<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
           <TableLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/tableIndia"
               android:layout_margin="10dp">
               <TableRow>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:text="Confirmed"
                       android:layout_weight="4"
                       android:layout_below="@+id/linearLayout"
                       android:fontFamily="@font/proxima_nova_bold"
                       android:textSize="20dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:text="Active"
                       android:layout_weight="4"
                       android:layout_below="@+id/linearLayout"
                       android:fontFamily="@font/proxima_nova_bold"
                       android:textSize="20dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Deaths"
                       android:gravity="center"
                       android:layout_weight="4"
                       android:layout_below="@+id/linearLayout"
                       android:fontFamily="@font/proxima_nova_bold"
                       android:textSize="20dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:text="Recovered"
                       android:layout_weight="4"
                       android:layout_below="@+id/linearLayout"
                       android:fontFamily="@font/proxima_nova_bold"
                       android:textSize="20dp"/>
               </TableRow>
               <TableRow>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_weight="1"
                       android:id="@+id/confirmed"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_weight="1"
                       android:id="@+id/active"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_weight="1"
                       android:id="@+id/deaths"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_weight="1"
                       android:id="@+id/recovered"/>
               </TableRow>
           </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tableIndia"
                android:id="@+id/linearLayout">


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tablestates"
                    android:layout_below="@+id/tableIndia"
                    android:layout_margin="5dp"
                    android:shrinkColumns="*">
                    <TableRow>
                        <Button
                            android:id="@+id/btnStateUT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="State/UT"
                            android:maxLines="1"
                            android:padding="0dp"/>
                        <Button
                            android:id="@+id/btnConfirmed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Confirmed"
                            android:maxLines="1"
                            android:padding="0dp"
                            android:textSize="12dp"/>
                        <Button
                            android:id="@+id/btnActive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Active"
                            android:maxLines="1"
                            android:padding="0dp"/>
                        <Button
                            android:id="@+id/btnDeaths"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deaths"
                            android:layout_gravity="center"
                            android:maxLines="1"
                            android:padding="0dp"/>
                        <Button
                            android:id="@+id/btnRecovered"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Recovered"
                            android:maxLines="1"
                            android:padding="0dp"
                            android:textSize="12dp"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/graphtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Graph"
                android:layout_below="@+id/linearLayout"
                android:fontFamily="@font/proxima_nova_bold"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"/>
            <Button
                android:id="@+id/confirmedButtonGraph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmed"
                android:layout_below="@id/graphtext"
                android:maxLines="1"
                android:padding="5dp"
                android:layout_marginLeft="10dp"/>
            <Button
                android:id="@+id/activeButtonGraph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:layout_below="@id/graphtext"
                android:layout_toRightOf="@+id/confirmedButtonGraph"
                android:maxLines="1"
                android:padding="5dp"
                android:layout_marginLeft="6dp"/>
            <Button
                android:id="@+id/recoveredButtonGraph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recovered"
                android:layout_below="@+id/graphtext"
                android:layout_toEndOf="@id/activeButtonGraph"
                android:maxLines="1"
                android:padding="5dp"
                android:layout_marginLeft="6dp"/>
            <Button
                android:id="@+id/deathsButtonGraph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deaths"
                android:layout_alignParentRight="true"
                android:layout_below="@id/graphtext"
                android:maxLines="1"
                android:padding="5dp"
                android:layout_marginRight="10dp"/>
            <Button
                android:id="@+id/linearGraphButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Linear"
                android:layout_below="@+id/confirmedButtonGraph"
                android:layout_marginLeft="10dp"/>
            <Button
                android:id="@+id/logarithmicGraphButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Logarithmic"
                android:layout_below="@+id/confirmedButtonGraph"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/cumulativetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cumulative"
                android:layout_below="@+id/linearGraphButton"
                android:fontFamily="@font/proxima_nova_bold"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"/>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linechart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/cumulativetext"/>
            <TextView
                android:id="@+id/dailytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily"
                android:layout_below="@+id/linechart"
                android:fontFamily="@font/proxima_nova_bold"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"/>
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barchart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/dailytext"/>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>