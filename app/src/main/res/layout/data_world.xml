<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tableIndia"
                android:layout_margin="10dp">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Confirmed"
                        android:layout_weight="4"
                        android:layout_below="@+id/linearLayout"
                        android:fontFamily="@font/proxima_nova_bold"
                        android:textSize="20dp"
                        android:background="@drawable/confirmed_back"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Active"
                        android:layout_weight="4"
                        android:layout_below="@+id/linearLayout"
                        android:fontFamily="@font/proxima_nova_bold"
                        android:textSize="20dp"
                        android:background="@drawable/active_back"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deaths"
                        android:gravity="center"
                        android:layout_weight="4"
                        android:layout_below="@+id/linearLayout"
                        android:fontFamily="@font/proxima_nova_bold"
                        android:textSize="20dp"
                        android:background="@drawable/deaths_back"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Recovered"
                        android:layout_weight="4"
                        android:layout_below="@+id/linearLayout"
                        android:fontFamily="@font/proxima_nova_bold"
                        android:textSize="20dp"
                        android:background="@drawable/recovered_back"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/confirmed"
                        android:background="@drawable/confirmed_back"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/active"
                        android:background="@drawable/active_back"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/deaths"
                        android:background="@drawable/deaths_back"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/recovered"
                        android:background="@drawable/recovered_back"/>
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tableIndia"
                android:id="@+id/linearLayout">


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tablestates"
                    android:layout_below="@+id/tableIndia"
                    android:layout_margin="5dp"
                    android:shrinkColumns="*">
                    <TableRow>
                        <Button
                            android:id="@+id/btnStateUT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Country"
                            android:maxLines="1"
                            android:padding="0dp"
                            android:textSize="10dp"/>
                        <Button
                            android:id="@+id/btnConfirmed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Confirmed"
                            android:maxLines="1"
                            android:padding="0dp"
                            android:textSize="10dp"/>
                        <Button
                            android:id="@+id/btnActive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Active"
                            android:maxLines="1"
                            android:padding="0dp"
                            android:textSize="10dp"/>
                        <Button
                            android:id="@+id/btnDeaths"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deaths"
                            android:layout_gravity="center"
                            android:maxLines="1"
                            android:padding="0dp"
                            android:textSize="10dp"/>
                        <Button
                            android:id="@+id/btnRecovered"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Recovered"
                            android:maxLines="1"
                            android:padding="0dp"
                            android:textSize="10dp"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>